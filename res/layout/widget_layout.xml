<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dip"
    android:background="@drawable/widget_shape"
    android:minHeight="300dip"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <ImageView
        android:id="@+id/widget_butt_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/cnt_desc"
        android:src="@drawable/arr_left" android:layout_gravity="center"/>

    <TextView
        android:id="@+id/widget_text_view"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="#FF33B5E5"
        android:text="@string/widget_text_nodata" >
    </TextView>

    <ImageView
        android:id="@+id/widget_butt_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/cnt_desc"
        android:src="@drawable/arr_right" android:layout_gravity="center"/>

</LinearLayout>